<%= render "layouts/message" %>

<h1>Listing Contact Types</h1>

<div class="col-md-12">
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @contact_types.each do |contact_type| %>
          <tr>
            <td><%= contact_type.name %></td>
            <td><%= link_to 'Show', contact_type, :class => "btn btn-success" %></td>
            <td><%= link_to 'Edit', edit_contact_type_path(contact_type), :class => "btn btn-primary" %></td>
            <td><%= link_to 'Destroy', contact_type, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<%= link_to 'New Contact type', new_contact_type_path, :class => "btn btn-default" %>
