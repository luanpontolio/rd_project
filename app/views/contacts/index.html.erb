<p id="notice"><%= notice %></p>

<h1>Listing Contacts</h1>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Email</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.email %></td>
          <td><%= contact.user.email %></td>
          <td><%= link_to 'Show', contact, :class => 'btn btn-success' %></td>
          <td><%= link_to 'Edit', edit_contact_path(contact), :class => 'btn btn-primary' %></td>
          <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br/>
<%= link_to 'New Contact', new_contact_path, :class => "btn btn-default" %>
