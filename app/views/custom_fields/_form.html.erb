<%= form_for(@custom_field) do |f| %>
  <% if @custom_field.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@custom_field.errors.count, "error") %> prohibited this custom_field from being saved:</h2>

      <ul>
      <% @custom_field.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :type_field %><br>
    <%= f.select :type_field, type_field_options_for_select, {:class => "form-control"} %>
  </div>

  <div class="form-group">
    <%= f.label "Value Field" %><br>
    <%= f.text_field :value, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, :class => "form-control" %>
  </div>

  <div class="form-group">
    <div class="actions">
      <%= f.submit "Save", :class => "btn btn-success btn-lg btn-block" %>
    </div>
  </div>
<% end %>
