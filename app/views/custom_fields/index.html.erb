<p id="notice"><%= notice %></p>

<h1>Listing Custom Fields</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>User</th>
      <th>Description</th>
      <th>Type field</th>
      <th>Value</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @custom_fields.each do |custom_field| %>
      <tr>
        <td><%= custom_field.user.email %></td>
        <td><%= custom_field.description %></td>
        <td><%= custom_field.type_field %></td>
        <td><%= custom_field.value %></td>
        <td><%= link_to 'Edit', edit_custom_field_path(custom_field), :class => "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', custom_field, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Custom field', new_custom_field_path, :class => "btn btn-default" %>
