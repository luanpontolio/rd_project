<div class="panel panel-default">
  <div class="panel-body">
		<h2>Forgot your password?</h2>

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => "form-horizontal" }) do |f| %>
		  <%= devise_error_messages! %>

		  <div class="form-group">
		    <div class="col-sm-12">
		      <div class="input-group">
		        <div class="input-group-addon">
		          <span class="glyphicon glyphicon-user"></span>
		        </div>
		    		<%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "E-mail..." %>
		    	</div>
		    </div>
		  </div>

		  <div class="form-group">
			  <div class="actions">
			    <%= f.submit "Send me reset password instructions", :class => 'btn btn-primary btn-lg btn-block' %>
			  </div>
			</div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>
